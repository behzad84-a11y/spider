# Bot Configuration Template
# Copy this file to .env and fill in your keys

# ─── Telegram Bot Tokens (DUAL TOKEN SYSTEM) ───
# VPS uses BOT_TOKEN_LIVE, Local uses BOT_TOKEN_DEV
# This prevents Telegram 409 Conflict errors permanently.
#
# To create BOT_TOKEN_DEV: Message @BotFather → /newbot → name it SpiderDev
BOT_TOKEN_LIVE=your_vps_telegram_token_here
BOT_TOKEN_DEV=your_local_dev_telegram_token_here
# DEPRECATED: Legacy single token (only works with ALLOW_LEGACY_TOKEN=1)
# BOT_TOKEN=your_old_single_token_here
# ALLOW_LEGACY_TOKEN=0

EXCHANGE_TYPE=coinex
MODE=DEV

# CoinEx Credentials
COINEX_API_KEY=your_coinex_key_here
COINEX_SECRET=your_coinex_secret_here

# KuCoin Credentials
KUCOIN_API_KEY=your_kucoin_key_here
KUCOIN_SECRET=your_kucoin_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here
